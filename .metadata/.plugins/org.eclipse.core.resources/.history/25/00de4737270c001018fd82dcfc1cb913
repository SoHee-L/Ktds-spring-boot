<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org//DTD Config 3.0//EN" 
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ktdsuniversity.edu.lsh.bbs.dao.BoardDao">
	    <select id="getBoardAllCount"
            resultType="int">
        SELECT COUNT(1)
          FROM BOARD
    </select>
    
    <select id="getAllBoard"
            resultType="com.example.demo.bbs.vo.BoardVO">
        SELECT ID
             , SUBJECT
             , CONTENT
             , EMAIL
             , VIEW_CNT
             , TO_CHAR(CRT_DT, 'YYYY-MM-DD') CRT_DT
             , TO_CHAR(MDFY_DT, 'YYYY-MM-DD') MDFY_DT
             , FILE_NAME
             , ORIGIN_FILE_NAME 
          FROM BOARD
         ORDER BY ID DESC
    </select>

	
</mapper> 
